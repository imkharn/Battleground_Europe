            id="Sniper"
			[not]
				[filter_location]
					terrain=*^V*,*^F*
				[/filter_location]
			[/not]
        [/filter]
        [modify_unit]
			[filter]
				x,y=$x1,$y1
			[/filter]
            [resistance]
				Cannon=10
				Flak=10
			[/resistance]
        [/modify_unit]
    [/event]



    [resistance]

    [/resistance]
	
	[defense]
			deep_water=100		
			reef=100
			shallow_water=100	
			swamp_water=100		
			sand=70			
			frozen=70		
			hills=60		
			mountains=60
			village=40		
			castle=40		
			forest=70		
			flat=70
			impassable=40		
			cave=40			
			fungus=70		
			unwalkable=40
	[/defense]

    [abilities]
	{ABILITY_AMBUSH}
	{ABILITY_NIGHTSTALK}
	{ABILITY_CONCEALMENT}
		{ABILITY_STEADFAST}
    [/abilities]

    {DEFENSE_ANIM "" "" {SOUND_LIST:HUMAN_HIT} }

    [attack]
        name=Close
        description=_"Scoped Rifle"
        icon=attacks/blank.png
        type=Bullet
        range=close
        damage=5
        number=4
		movement_used=3
	[specials]
	    {WEAPON_SPECIAL_SWARM}
	[/specials]
    [/attack]
    [attack]
        name=Medium
        description=_"Scoped Rifle"
        icon=attacks/blank.png
        type=Bullet
        range=medium
        damage=16
        number=3
		movement_used=2
	[specials]
	    {WEAPON_SPECIAL_SWARM}
		{WEAPON_SPECIAL_FIRSTSTRIKE}
	[/specials]
    [/attack]
	[attack]
        name=Far
        description=_"Scoped Rifle"
        icon=attacks/blank.png
        type=Sniper
        range=far
        damage=16
        number=2
		movement_used=1
	[specials]
	    {WEAPON_SPECIAL_SWARM}
		{WEAPON_SPECIAL_MARKSMAN}
	[/specials]
    [/attack]
	
    [attack_anim]
        [filter_attack]

        [/filter_attack]
        [missile_frame]
            begin=-150
            end=0
            image=""
            image_diagonal=""
        [/missile_frame]
        [frame]
            begin=-445
            end=-380
            image="Infantry/nightops.png"
	    sound=pistol-1.wav
        [/frame]
        [if]
            hits=yes
            [frame]
                begin=-380
                end=-305
                image="Infantry/nightops.png"
            [/frame]
        [/if]
        [else]
            hits=no
            [frame]
                begin=-380
                end=-305
                image="Infantry/nightops.png"
