#textdomain wesnoth-pk-westerners

[unit_type]
    id=Sniper
    name= _ "Sniper"
    race=Infantry
    gender=male
    image="Infantry/nightops.png"
    {MAGENTA_IS_THE_TEAM_COLOR}
    #ellipse="misc/ellipse-nozoc"
    hitpoints=40
    movement_type=mcinfantry
    movement=3
	vision=5
    experience=72
    level=1
	upkeep=2
    alignment=lawful
    advances_to=Sniper_Vet
    die_sound={SOUND_LIST:HUMAN_DIE}
    cost=38
    usage=Support_Infantry
    description= _ "Four snipers
"


	
	
	[event]
        name=moveto
        first_time_only=no
        [filter]
            id="Sniper"
			[filter_location]
				terrain=*^V*,*^F*
			[/filter_location]
        [/filter]
        [modify_unit]
			[filter]
				x,y=$x1,$y1
			[/filter]
            [resistance]
				Cannon=0
				Flak=0
			[/resistance]
        [/modify_unit]
    [/event]

	[event]
        name=moveto
        first_time_only=no
